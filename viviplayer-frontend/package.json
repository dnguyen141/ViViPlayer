{
  "name": "viviplayer-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier \"../viviplayer-frontend/**/*.{js,css}\"",
    "format": "npm run prettier -- --write"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.16.13",
    "husky": "^7.0.4",
    "next": "12.0.4",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "eslint": "7",
    "eslint-config-next": "12.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,css}": [
      "npm run format",
      "git add"
    ]
  }
}
